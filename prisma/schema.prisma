generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                      String           @id @map("id")
    initial_amount          Decimal          @default(0)
    cash                    Decimal          @default(0)
    current_portfolio_value Decimal          @default(0)
    portfolios              Portfolio[]
    portfolio_values        PortfolioValue[]
    trades                  Trade[]
    watchlists              Watchlist[]
}

model Watchlist {
    id       Int    @id @default(autoincrement())
    user_id  String
    stock_id Int
    Stock    Stock  @relation(fields: [stock_id], references: [id], onDelete: Cascade)
    User     User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Stock {
    id            Int         @id @default(autoincrement())
    symbol        String      @unique
    name          String
    icon_url      String
    current_price Decimal
    portfolios    Portfolio[]
    trades        Trade[]
    watchlists    Watchlist[]
}

model Trade {
    id         Int       @id @default(autoincrement())
    user_id    String    @default("")
    stock_id   Int
    trade_type TradeType
    shares     Int
    price      Decimal?   
    timestamp  DateTime  @default(now())
    Stock      Stock     @relation(fields: [stock_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
    User       User      @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Portfolio {
    id            Int     @id @default(autoincrement())
    user_id       String
    stock_id      Int
    shares        Int
    average_price Decimal
    total_equity  Decimal
    gain          Decimal
    Stock         Stock   @relation(fields: [stock_id], references: [id], onDelete: Cascade)
    User          User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

    @@unique([user_id, stock_id])  
}

model PortfolioValue {
    id        Int      @id @default(autoincrement())
    user_id   String
    value     Decimal
    timestamp DateTime @default(now())
    User      User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

enum TradeType {
    BUY
    SELL
}
